<%= form_with(model: asset, local: true) do |form| %>
  <% if asset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(asset.errors.count, "error") %> prohibited this asset from being saved:</h2>

      <ul>
        <% asset.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Company_Name, class:"label" %>
    <div class="control">
      <%= form.select :Company_Name, [current_user.Company_Name], class:"my-3" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :Season, class:"label" %>
    <div class="control">
      <%= form.text_field :Season, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :Asset, class:"label" %>
    <div class="control">
      <%= form.text_field :Asset, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :Asset_Number, class:"label" %>
    <div class="control">
      <%= form.text_field :Asset_Number, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :Asset_Type, class:"label" %>
    <div class="control">
      <%= form.text_field :Asset_Type, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :Unit_Price, class:"label" %>
    <div class="control">
      <%= form.text_field :Unit_Price, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :vat, class:"label" %>
    <div class="control">
      <%= form.text_field :vat, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :Total_Amount, class:"label" %>
    <div class="control">
      <%= form.text_field :Total_Amount, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :Pro_Number, class:"label" %>
    <div class="control">
      <%= form.text_field :Pro_Number, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="field">
    <%= form.label :Date, class:"label" %>
    <div class="control">
      <%= form.date_select :Date, class:"input" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class:"button is-success" %>
  </div>
<% end %>
