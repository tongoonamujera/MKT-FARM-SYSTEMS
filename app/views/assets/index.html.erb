<p id="notice"><%= notice %></p>

<%= link_to 'New Asset', new_asset_path, class:"button is-success my-3" %>
<h1>Assets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Date</th>
      <th>Season</th>
      <th>Asset</th>
      <th>Asset number</th>
      <th>Asset type</th>
      <th>Unit price</th>
      <th>Total amount</th>
      <th>Pro number</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.Company_Name %></td>
        <td><%= asset.Date %></td>
        <td><%= asset.Season %></td>
        <td><%= asset.Asset %></td>
        <td><%= asset.Asset_Number %></td>
        <td><%= asset.Asset_Type %></td>
        <td><%= asset.Unit_Price %></td>
        <td><%= asset.Total_Amount %></td>
        <td><%= asset.Pro_Number %></td>
        <td><%= asset.user_id %></td>
        <td><%= link_to 'Show', asset %></td>
        <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
        <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


