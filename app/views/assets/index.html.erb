<p id="notice"><%= notice %></p>

<%= link_to 'New Asset', new_asset_path, class:"button is-success my-3" %>
<h1>Assets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Date</th>
      <th>Season</th>
      <th>Asset</th>
      <th>Asset number</th>
      <th>Asset type</th>
      <th>Unit price</th>
      <th>V.A.T</th>
      <th>Total amount</th>
      <th>Pro number</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.company_name %></td>
        <td><%= asset.date %></td>
        <td><%= asset.season %></td>
        <td><%= asset.asset %></td>
        <td><%= asset.asset_number %></td>
        <td><%= asset.asset_type %></td>
        <td><%= asset.unit_price %></td>
        <td><%= asset.vat %></td>
        <td><%= asset.total_amount %></td>
        <td><%= asset.pro_number %></td>
        <td><%= asset.user_id %></td>
        <td><%= link_to 'Show', asset %></td>
        <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
        <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


