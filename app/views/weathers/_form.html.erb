<%= form_with(model: weather, local: true) do |form| %>
  <% if weather.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(weather.errors.count, "error") %> prohibited this weather from being saved:</h2>

      <ul>
        <% weather.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date, class:"label" %>
    <div class="control">
      <%= form.date_select :date, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :area, class:"label" %>
    <div class="control">
      <%= form.text_field :area, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :min, class:"label" %>
    <div class="control">
      <%= form.text_field :min, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :max, class:"label" %>
    <div class="control">
      <%= form.text_field :max, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"button is-success" %>
  </div>
<% end %>
