<p id="notice"><%= notice %></p>
<%= link_to 'New Weather', new_weather_path, class:"button is-success my-3" %>
<h1 class="has-background-white">Weathers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Area</th>
      <th>Min</th>
      <th>Max</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weathers.each do |weather| %>
      <tr>
        <td><%= weather.Date %></td>
        <td><%= weather.Area %></td>
        <td><%= weather.Min %></td>
        <td><%= weather.Max %></td>
        <td><%= weather.user_id %></td>
        <td><%= link_to 'Show', weather %></td>
        <td><%= link_to 'Edit', edit_weather_path(weather) %></td>
        <td><%= link_to 'Destroy', weather, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


