<p id="notice"><%= notice %></p>

<h1>Mkt Payments</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Company name</th>
      <th>Service rendered</th>
      <th>Service</th>
      <th>Amount paid</th>
      <th>From</th>
      <th>To</th>
      <th>Receipt number</th>
      <th>Paid by</th>
      <th>Pro number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mkt_payments.each do |mkt_payment| %>
      <tr>
        <td><%= mkt_payment.Date %></td>
        <td><%= mkt_payment.Company_Name %></td>
        <td><%= mkt_payment.Service_Rendered %></td>
        <td><%= mkt_payment.Service %></td>
        <td><%= mkt_payment.Amount_Paid %></td>
        <td><%= mkt_payment.From %></td>
        <td><%= mkt_payment.To %></td>
        <td><%= mkt_payment.Receipt_Number %></td>
        <td><%= mkt_payment.Paid_by %></td>
        <td><%= mkt_payment.Pro_number %></td>
        <td><%= link_to 'Show', mkt_payment %></td>
        <td><%= link_to 'Edit', edit_mkt_payment_path(mkt_payment) %></td>
        <td><%= link_to 'Destroy', mkt_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

