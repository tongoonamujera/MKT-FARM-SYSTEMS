<p id="notice"><%= notice %></p>
<%= link_to 'New Calender', new_calender_path, class:"button btn-orange my-3" %>
<div class='box outerdiv'>
<h1 class="has-text-centered"><strong>Calenders</strong></h1>

<div class="table-container">

<table class="table is-bordered is-striped">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Date</th>
      <th>Season</th>
      <th>Farm name</th>
      <th>Month</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calenders.each do |calender| %>
      <tr>
        <td><%= calender.company_name %></td>
        <td><%= calender.date %></td>
        <td><%= calender.season %></td>
        <td><%= calender.farm_name %></td>
        <td><%= calender.month %></td>
        <td><%= calender.activity %></td>
        <td><%= link_to 'Show', calender %></td>
        <td><%= link_to 'Edit', edit_calender_path(calender) %></td>
        <td><%= link_to 'Destroy', calender, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
</div>

