<%= form_with(model: field_day, local: true) do |form| %>
  <% if field_day.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(field_day.errors.count, "error") %> prohibited this field_day from being saved:</h2>

      <ul>
        <% field_day.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :company_name, class:"label" %>
    <%= form.select :company_name, [current_user.company_name], class:"my-3" %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.text_field :season, value: season_active, type: :hidden %>
  </div>

  <div class="field">
    <%= form.label :place, class:"label" %>
    <%= form.text_field :place, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :start_time, class:"label" %>
    <%= form.time_select :start_time, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :focus, class:"label" %>
    <%= form.text_field :focus, class:"input" %>
  </div>

  <div class="actions">
    <%= form.submit class:"button btn-orange" %>
  </div>
<% end %>
