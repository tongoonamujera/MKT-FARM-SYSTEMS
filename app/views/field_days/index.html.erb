<p id="notice"><%= notice %></p>

<h1 class="has-background-white">Field Days</h1>

<table class="table">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Date</th>
      <th>Season</th>
      <th>Place</th>
      <th>Start time</th>
      <th>Focus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @field_days.each do |field_day| %>
      <tr>
        <td><%= field_day.Company_Name %></td>
        <td><%= field_day.Date %></td>
        <td><%= field_day.Season %></td>
        <td><%= field_day.place %></td>
        <td><%= field_day.Start_Time %></td>
        <td><%= field_day.focus %></td>
        <td><%= link_to 'Show', field_day %></td>
        <td><%= link_to 'Edit', edit_field_day_path(field_day) %></td>
        <td><%= link_to 'Destroy', field_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

