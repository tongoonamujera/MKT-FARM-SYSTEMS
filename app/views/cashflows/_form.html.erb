    <div class="control">
      <%= form.text_field :hectrage, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :operation, class:"label" %>
    <div class="control">
      <%= form.select :operation, ['SeedBed', 'Land Chemicals', 'Land Fertilizers', 'Farm Operations', 'Curing', 'Grading And Selling', 'Others']%>
