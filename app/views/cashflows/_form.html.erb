      <%= form.text_field :tian_ze_number, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :total_quantity, class:"label" %>
    <div class="control">
      <%= form.text_field :total_quantity, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :pro_number, class:"label" %>
    <div class="control">
      <%= form.text_field :pro_number, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"button btn-orange" %>
  </div>
