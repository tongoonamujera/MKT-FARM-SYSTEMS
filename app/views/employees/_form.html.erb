<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :company_name, value:current_user.company_name, type: :hidden %>
  </div>

  <div class="field">
    <%= form.text_field :farm_name, value:current_user.farm_name, type: :hidden %>
  </div>

  <div class="field">
    <%= form.label :employee_name, class:"label" %>
    <%= form.text_field :employee_name, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :employee_number, class:"label" %>
    <%= form.text_field :employee_number, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :daily_rate, class:"label" %>
    <%= form.text_field :daily_rate, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :worker_status, class:"label" %>
    <%= form.select :worker_status, ['', 'Permanent', 'Maricho'], class:"my-3" %>
  </div>

  <div class="field">
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"button btn-orange is-fullwidth" %>
  </div>
<% end %>
