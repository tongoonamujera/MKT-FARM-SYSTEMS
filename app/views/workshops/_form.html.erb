    <%= form.label :date, class:"label" %>
    <div class="control">
      <%= form.date_select :date, class:"input" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.text_field :season, value: season_active, type: :hidden %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.text_field :farm_name, value:current_user.farm_name, type: :hidden %>
    </div>
  </div>

  <div class="field">
    <%= form.label :item, class:"label" %>
    <div class="control">
      <%= form.text_field :item, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :quantity, class:"label" %>
    <div class="control">
      <%= form.text_field :quantity, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"button btn-orange" %>
  </div>
