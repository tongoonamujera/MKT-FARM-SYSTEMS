<section class="hero has-background-grey is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar is-light" role="navigation" aria-label="main navigation">
      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item">
            Home
          </a>

          <a class="navbar-item">
            Documentation
          </a>

          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">
              More
            </a>

            <div class="navbar-dropdown has-background-dark">
              <a class="navbar-item">
                About
              </a>
              <a class="navbar-item">
                Jobs
              </a>
              <a class="navbar-item">
                Contact
              </a>
              <hr class="navbar-divider">
              <a class="navbar-item">
                Report an issue
              </a>
            </div>
          </div>
        </div>

        <% if user_signed_in? %>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <%= link_to 'Home', users_path, class:"button is-light" %>
                <%= link_to 'Edit Account', edit_user_registration_path, class:"button is-light" %>
                <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class:"button is-light" %>
              </div>
            </div>
          </div>
        <% else %>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <%= link_to 'Sign Up', new_user_registration_path, class:"button is-light" %>
                <%= link_to 'Log In', new_user_session_path, class:"button is-light" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </nav>

  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
        <p>
        Hello 
        <% if user_signed_in? %>
          <%= current_user.email.capitalize %>
        <% else %>
          <span>Guest User</span>
        <% end %>
        </p>
      <p class="subtitle">
        
      </p>
    </div>
  </div>
</section>