<section class="hero has-background-grey is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar is-light" role="navigation" aria-label="main navigation">
      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <%# <a class="navbar-item">
            Home
          </a> %>
          <%= link_to "Home", home_index_path, class:"navbar-item"%>

          <a class="navbar-item">
            Documentation
          </a>

          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">
              More
            </a>

            <div class="navbar-dropdown has-background-dark">
              <%= link_to "Client Payments", client_payments_path, class:"navbar-item has-text-white" %>
              <%= link_to "Mkt Payments", mkt_payments_path, class:"navbar-item has-text-white" %>
              <a class="navbar-item">
                Contact
              </a>
              <hr class="navbar-divider">
              <a class="navbar-item">
                Report an issue
              </a>
            </div>
          </div>
        </div>

        <% if user_signed_in? %>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <%= link_to 'Users', users_path, class:"button is-light" %>
                <%= link_to 'Edit Account', edit_user_registration_path, class:"button is-light" %>
                  <%= link_to destroy_user_session_path, method: :delete, class:"has-text-dark button is-light" do %>
                    <span><i class="fas fa-sign-out-alt fa-2x"></i></span> 
                  <%end%>
              </div>
            </div>
          </div>
        <% else %>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <%= link_to 'Sign Up', new_user_registration_path, class:"button is-light" %>
                <%= link_to 'Log In', new_user_session_path, class:"button is-light" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </nav>

  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
        <p>

        <% if user_signed_in? %>
        <span class="blink">
          <%= greeting_text %>
        </span>
        <% else %>
          <span>Guest User</span>
        <% end %>
        </p>
      <p class="subtitle">
        <%= current_date %>
      </p>
    </div>
  </div>
</section>