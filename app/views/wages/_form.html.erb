<%= form_with(model: wage, local: true) do |form| %>
  <% if wage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wage.errors.count, "error") %> prohibited this wage from being saved:</h2>

      <ul>
        <% wage.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Company_Name, class:"label" %>
    <div class="control">
      <%= form.select :Company_Name, [current_user.Company_Name], class:"my-3" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :daily_rate, class:"label" %>
    <div class="control">
      <%= form.text_field :daily_rate, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :empoyee_number, class:"label" %>
    <div class="control">
      <%= form.text_field :empoyee_number, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :Farm_Name, class:"label" %>
    <div class="control">
      <%= form.text_field :Farm_Name, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :worker_status, class:"label" %>
    <div class="control">
      <%= form.select :worker_status, ['Permanent', 'Maricho'], class:"my-3" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :employee_name, class:"label" %>
    <div class="control">
      <%= form.text_field :employee_name, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :Pro_Number, class:"label" %>
    <div class="control">
      <%= form.text_field :Pro_Number, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"button is-success" %>
  </div>
<% end %>
