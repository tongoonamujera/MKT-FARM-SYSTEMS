<p id="notice"><%= notice %></p>
<%= link_to 'New Wage', new_wage_path, class:"button btn-orange my-3" %>
<div class='box outerdiv'>
<h1 class="has-background-white">Wages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Season</th>
      <th>Month</th>
      <th>Company name</th>
      <th>Farm Name</th>
      <th>Employee Name</th>
      <th>Employee Number</th>
      <th>Days Worked</th>
      <th>Gross</th>
      <th>Allowance</th>
      <th>Payee</th>
      <th>NSSA</th>
      <th>NEC</th>
      <th>Cash Requests</th>
      <th>Other Deductions</th>
      <th>Net</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wages.each do |wage| %>
      <tr>
        <td><%= wage.season %></td>
        <td><%= wage.month %></td>
        <td><%= wage.company_name %></td>
        <td><%= wage.farm_name %></td>
        <td><%= wage.employee_name %></td>
        <td><%= wage.empoyee_number %></td>
        <td><%= wage.days_worked %></td>
        <td><%= wage.gross %></td>
        <td><%= wage.allowance %></td>
        <td><%= wage.payee %></td>
        <td><%= wage.nssa %></td>
        <td><%= wage.nec %></td>
        <td><%= wage.cash_requests %></td>
        <td><%= wage.other_deductions %></td>
        <td><%= wage.net %></td>
        <td><%= link_to 'Show', wage %></td>
        <td><%= link_to 'Edit', edit_wage_path(wage) %></td>
        <td><%= link_to 'Destroy', wage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
