  </div>

  <div class="field">
    <%= form.label :date, class:"label" %>
    <div class="control">
      <%= form.date_select :date, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :season, class:"label" %>
    <div class="control">
      <%= form.text_field :season, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :farm_name, class:"label" %>
    <div class="control">
      <%= form.text_field :farm_name, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :types, class:"label" %>
    <div class="control">
      <%= form.text_field :types, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :cereal_name, class:"label" %>
    <div class="control">
      <%= form.text_field :input_name, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :quantity, class:"label" %>
    <div class="control">
      <%= form.text_field :quantity, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :unit, class:"label" %>
    <div class="control">
