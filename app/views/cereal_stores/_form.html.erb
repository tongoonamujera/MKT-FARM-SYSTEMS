<%= form_with(model: cereal_store, local: true) do |form| %>
  <% if cereal_store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cereal_store.errors.count, "error") %> prohibited this cereal_store from being saved:</h2>
      <ul>
        <% cereal_store.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :company_name, class:"label" %>
    <div class="control"></div>
