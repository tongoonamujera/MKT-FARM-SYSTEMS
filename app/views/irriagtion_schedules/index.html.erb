<p id="notice"><%= notice %></p>
<%= link_to 'New Irriagtion Schedule', new_irriagtion_schedule_path, class:"button is-success my-3" %>
<div class='box'>
<h1 class="has-background-white">Irriagtion Schedules</h1>

<table class="table">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Date</th>
      <th>Season</th>
      <th>Farm name</th>
      <th>Section</th>
      <th>Crop</th>
      <th>Calibration</th>
      <th>Mls</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Turn around time</th>
      <th>Pro number</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @irriagtion_schedules.each do |irriagtion_schedule| %>
      <tr>
        <td><%= irriagtion_schedule.company_name %></td>
        <td><%= irriagtion_schedule.date %></td>
        <td><%= irriagtion_schedule.season %></td>
        <td><%= irriagtion_schedule.farm_name %></td>
        <td><%= irriagtion_schedule.section %></td>
        <td><%= irriagtion_schedule.crop %></td>
        <td><%= irriagtion_schedule.calibration %></td>
        <td><%= irriagtion_schedule.mls %></td>
        <td><%= irriagtion_schedule.start_date %></td>
        <td><%= irriagtion_schedule.end_date %></td>
        <td><%= irriagtion_schedule.turn_around_time %></td>
        <td><%= irriagtion_schedule.pro_number %></td>
        <td><%= irriagtion_schedule.user_id %></td>
        <td><%= link_to 'Show', irriagtion_schedule %></td>
        <td><%= link_to 'Edit', edit_irriagtion_schedule_path(irriagtion_schedule) %></td>
        <td><%= link_to 'Destroy', irriagtion_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

